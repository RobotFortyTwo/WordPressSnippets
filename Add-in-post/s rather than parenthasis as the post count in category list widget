// Add in post/s rather than (x) as the post count in category list widget
add_filter('wp_list_categories', 'add_span_cat_count');
function add_span_cat_count($links)
{
	$links = str_replace('(1)', '<span class="PostAmount"> / 1 Post</span>', $links);
	$links = str_replace('</a> (', '</a> <span class="PostAmount"> / ', $links, $oxo);
	$links = str_replace(')', ' Posts </span>', $links);
return $links;
}
// end of change archive post amount text
